{
  "name": "ottomatt",
  "version": "0.0.3",
  "manifest_version": 3,
  "options_page": "options.html",
  "action": {"default_popup": "popup.html"},
  "permissions": [
    "contextMenus"
  ],  
  "icons": {
    "16": "img/icon-16.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts" : [
    {
      "js": [
        "js/content_funcaps.js"
      ],
      "matches": [
        "https://funcaps.com/shipping/tracking/*"
        
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "js_content_all.js"
      ]
    }
  ]
}
